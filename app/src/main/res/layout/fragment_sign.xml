<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
    android:orientation="vertical">

    <TextView

        android:id="@+id/watch_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="中国未来星决赛"
        android:textColor="@color/white"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_marginTopPercent="2%" />

    <ListView

        android:id="@+id/a_sign_list"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/percent_2"
        android:scrollbars="none"
        app:layout_marginLeftPercent="3.24%"
        app:layout_widthPercent="26.67%" />

    <ListView
        android:id="@+id/b_sign_list"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/percent_2"
        android:scrollbars="none"
        app:layout_marginRightPercent="3.24%"
        app:layout_widthPercent="26.67%" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="请扫描二维码签到"
        android:textColor="@color/color_connected"
        android:textSize="40sp"
        app:layout_marginBottomPercent="11.56%" />

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/percent_2"
        android:layout_width="match_parent"
        android:layout_below="@+id/watch_name"
        android:layout_centerHorizontal="true"
        app:layout_heightPercent="18%"
        app:layout_marginLeftPercent="3.24%"
        app:layout_marginRightPercent="3.24%">


        <ImageView

            android:id="@+id/b_logo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:scaleType="fitEnd"
            android:src="@mipmap/b_logo" />

        <ImageView
            android:id="@+id/a_logo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitStart"
            android:src="@mipmap/a_logo" />

        <TextView
            android:id="@+id/a_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="梦之队梦之队梦"
            android:textColor="@color/color_connected"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_marginBottomPercent="0.01%"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/a_logo"
            android:layout_marginStart="30dp" />

        <TextView
            android:id="@+id/b_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="梦之队梦之队梦"
            android:textColor="@color/color_connected"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_marginBottomPercent="0.01%"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/b_logo"
            android:layout_marginEnd="30dp" />

    </android.support.percent.PercentRelativeLayout>

    <ImageView

        android:id="@+id/qr_code"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/qr_code"
        app:layout_marginTopPercent="39.9%"
        app:layout_widthPercent="21.30%" />

</android.support.percent.PercentRelativeLayout>